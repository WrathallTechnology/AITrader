# Alpaca API Configuration
# Get your keys from https://app.alpaca.markets/

# Paper Trading (use these for testing)
ALPACA_API_KEY=your_paper_api_key_here
ALPACA_SECRET_KEY=your_paper_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Live Trading (uncomment when ready for live trading)
# ALPACA_API_KEY=your_live_api_key_here
# ALPACA_SECRET_KEY=your_live_secret_key_here
# ALPACA_BASE_URL=https://api.alpaca.markets

# Trading Configuration
TRADING_MODE=paper  # paper or live
DEFAULT_POSITION_SIZE_PCT=0.02  # 2% of portfolio per trade
MAX_POSITIONS=10
RISK_PER_TRADE=0.01  # 1% risk per trade

# Initial Capital (optional)
# Set this to define your starting trading capital
# The bot will use this amount + any profits it earns (or minus losses)
# Example: Start with $10k, earn $2k profit -> bot now uses $12k
# Leave empty to use full account value
INITIAL_CAPITAL=10000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log
